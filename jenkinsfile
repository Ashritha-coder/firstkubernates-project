pipeline {
  agent any

 tools {
    maven 'maven-3.9.6'
}
  environment {
    DOCKER_IMAGE = "dockerhub_username/bankapp"
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/Ashritha-coder/firstkubernates-project.git'
      }
    }

    stage('Build JAR') {
      steps {
        dir('Blue-Green-Deployment') {
          sh 'mvn clean package'
        }
      }
    }

    stage('Build Docker Image') {
      steps {
        dir('Blue-Green-Deployment') {
          sh 'docker build -t $DOCKER_IMAGE:blue .'
        }
      }
    }

    stage('Push Docker Image') {
      steps {
        sh 'docker push $DOCKER_IMAGE:blue'
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        dir('Blue-Green-Deployment') {
          sh '''
            kubectl apply -f app-deployment-blue.yml
            kubectl apply -f bankapp-service.yml
          '''
        }
      }
    }
  }
}
