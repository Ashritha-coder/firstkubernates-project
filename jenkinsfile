pipeline {
  agent any

  environment {
    DOCKER_IMAGE = "dockerhub_username/bankapp"
  }

  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/your-username/blue-green-deployment.git'
      }
    }

    stage('Build JAR') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t $DOCKER_IMAGE:blue .'
      }
    }

    stage('Push Docker Image') {
      steps {
        sh 'docker push $DOCKER_IMAGE:blue'
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        sh '''
        kubectl apply -f app-deployment-blue.yml
        kubectl apply -f bankapp-service.yml
        '''
      }
    }
  }
}
